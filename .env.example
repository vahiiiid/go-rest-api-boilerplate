# ===========================================
# Go REST API Version
# ===========================================
VERSION=1.1.0

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
APP_NAME="GRAB API"
APP_ENVIRONMENT=development   # development | staging | production
APP_DEBUG=false               # true|false

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=8080
SERVER_READTIMEOUT=10        # seconds
SERVER_WRITETIMEOUT=10       # seconds
LOG_LEVEL=info               # debug, info, warn, error

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Use 'db' for Docker, 'localhost' for local development
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=grab
DB_SSLMODE=disable           # disable | require | verify-full

# ===========================================
# JWT CONFIGURATION
# IMPORTANT: Change this to a strong, random secret in production!
# ===========================================
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_IN_PRODUCTION
JWT_TTL_HOURS=24

# ===========================================
# RATE LIMITING CONFIGURATION
# ===========================================
RATELIMIT_ENABLED=false
RATELIMIT_REQUESTS=100
RATELIMIT_WINDOW=1m

# ===========================================
# CONTAINER NAMES (for docker-compose)
# ===========================================
APP_CONTAINER_NAME=go_api_app
DB_CONTAINER_NAME=go_api_db
APP_CONTAINER_NAME_PROD=go_api_app_prod
DB_CONTAINER_NAME_PROD=go_api_db_prod

# ===========================================
# HEALTH CHECK CONFIGURATION (for docker-compose)
# ===========================================
HEALTH_CHECK_INTERVAL=10s
HEALTH_CHECK_TIMEOUT=5s
HEALTH_CHECK_RETRIES=5