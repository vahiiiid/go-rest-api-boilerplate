# ===========================================
# Go REST API Version
# ===========================================
VERSION=1.1.0

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
PORT=8080
ENV=development
# Change this to "warn", in production! - debug, info, warn, error
LOG_LEVEL=info

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=go_api

# ===========================================
# JWT CONFIGURATION
# IMPORTANT: Change this to a strong, random secret in production!
# ===========================================
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_IN_PRODUCTION
JWT_TTL_HOURS=24

# ===========================================
# CONTAINER NAMES
# ===========================================
APP_CONTAINER_NAME=go_api_app
DB_CONTAINER_NAME=go_api_db
APP_CONTAINER_NAME_PROD=go_api_app_prod
DB_CONTAINER_NAME_PROD=go_api_db_prod

# ===========================================
# HEALTH CHECK CONFIGURATION
# ===========================================
HEALTH_CHECK_INTERVAL=10s
HEALTH_CHECK_TIMEOUT=5s
HEALTH_CHECK_RETRIES=5
