# Application
APP_NAME="GRAB API"
APP_ENVIRONMENT=development   # development | staging | production
APP_DEBUG=false               # true|false

# Server
PORT=8080
SERVER_READTIMEOUT=10        # seconds
SERVER_WRITETIMEOUT=10       # seconds
LOG_LEVEL=info               # debug, info, warn, error

# Database (overrides configs.database.*)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=grab
DB_SSLMODE=disable           # disable | require | verify-full

# JWT Configuration
# IMPORTANT: Change this to a strong, random secret in production!
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_IN_PRODUCTION
JWT_TTL_HOURS=24
