.PHONY: help quick-start up down restart logs build test test-coverage lint lint-fix swag migrate-create migrate-up migrate-down migrate-status migrate-goto migrate-force migrate-drop build-binary run-binary clean

# Container name (from docker-compose.yml)
CONTAINER_NAME := go_api_app

# Check if container is running
CONTAINER_RUNNING := $(shell docker ps --format '{{.Names}}' 2>/dev/null | grep -E '^$(CONTAINER_NAME)$$')

# Determine execution command
ifdef CONTAINER_RUNNING
	EXEC_CMD = docker exec $(CONTAINER_NAME)
	EXEC_CMD_INTERACTIVE = docker exec -i $(CONTAINER_NAME)
	ENV_MSG = üê≥ Running in Docker container
else
	EXEC_CMD = 
	EXEC_CMD_INTERACTIVE = 
	ENV_MSG = üíª Running on host (Docker not available)
endif

## help: Show this help message
help:
	@echo "Go REST API Boilerplate - Available Commands"
	@echo "=============================================="
	@echo ""
	@echo "üöÄ Quick Start:"
	@echo "  make quick-start    - Complete setup and start (Docker required)"
	@echo ""
	@echo "üê≥ Docker Commands:"
	@echo "  make up             - Start containers"
	@echo "  make down           - Stop containers"
	@echo "  make restart        - Restart containers"
	@echo "  make logs           - View container logs"
	@echo "  make build          - Rebuild containers"
	@echo ""
	@echo "üß™ Development Commands:"
	@echo "  make test           - Run tests"
	@echo "  make test-coverage  - Run tests with coverage"
	@echo "  make lint           - Run linter"
	@echo "  make lint-fix       - Run linter and fix issues"
	@echo "  make swag           - Generate Swagger docs"
	@echo ""
	@echo "üóÑÔ∏è  Database Commands:"
	@echo "  make migrate-create NAME=<name>  - Create new migration"
	@echo "  make migrate-up                  - Apply all pending migrations"
	@echo "  make migrate-down                - Rollback last migration (or STEPS=N for N migrations)"
	@echo "  make migrate-status              - Show current migration version"
	@echo "  make migrate-goto VERSION=<n>    - Go to specific version"
	@echo "  make migrate-force VERSION=<n>   - Force set version (recovery)"
	@echo "  make migrate-drop                - Drop all tables"
	@echo ""
	@echo "‚öôÔ∏è  Native Build (requires Go on host):"
	@echo "  make build-binary   - Build Go binary directly (no Docker)"
	@echo "  make run-binary     - Build and run binary directly (no Docker)"
	@echo ""
	@echo "üßπ Utility:"
	@echo "  make clean          - Clean build artifacts"
	@echo ""
	@echo "üí° Most commands auto-detect Docker/host environment"
	@echo "üí° Native build commands require Go installed on your machine"

## quick-start: Complete setup and start the project
quick-start:
	@chmod +x scripts/quick-start.sh
	@./scripts/quick-start.sh

## up: Start Docker containers
up:
	@echo "üê≥ Starting Docker containers..."
	@docker compose up -d --build --wait
	@echo "‚úÖ Containers started and healthy"
	@echo "üìç API: http://localhost:8080"

## down: Stop Docker containers
down:
	@echo "üõë Stopping Docker containers..."
	@docker compose down
	@echo "‚úÖ Containers stopped"

## restart: Restart Docker containers
restart:
	@echo "üîÑ Restarting Docker containers..."
	@docker compose restart
	@echo "‚úÖ Containers restarted"

## logs: View container logs
logs:
	@docker compose logs -f app

## build: Rebuild Docker containers
build:
	@echo "üî® Building Docker containers..."
	@docker compose build
	@echo "‚úÖ Build complete"

## test: Run tests
test:
ifdef CONTAINER_RUNNING
	@echo "$(ENV_MSG)"
	@$(EXEC_CMD) go test ./... -v
else
	@if command -v go >/dev/null 2>&1; then \
		echo "$(ENV_MSG)"; \
		go test ./... -v; \
	else \
		echo "‚ùå Error: Docker container not running and Go not installed"; \
		echo "Please run: make up"; \
		exit 1; \
	fi
endif

## test-coverage: Run tests with coverage
test-coverage:
ifdef CONTAINER_RUNNING
	@echo "$(ENV_MSG)"
	@$(EXEC_CMD) go test ./... -v -coverprofile=coverage.out
	@$(EXEC_CMD) go tool cover -html=coverage.out -o coverage.html
	@echo "‚úÖ Coverage report: coverage.html"
else
	@if command -v go >/dev/null 2>&1; then \
		echo "$(ENV_MSG)"; \
		go test ./... -v -coverprofile=coverage.out; \
		go tool cover -html=coverage.out -o coverage.html; \
		echo "‚úÖ Coverage report: coverage.html"; \
	else \
		echo "‚ùå Error: Docker container not running and Go not installed"; \
		echo "Please run: make up"; \
		exit 1; \
	fi
endif

## lint: Run linter
lint:
ifdef CONTAINER_RUNNING
	@echo "$(ENV_MSG)"
	@echo "üîç Running golangci-lint..."
	@$(EXEC_CMD) golangci-lint run --timeout=5m && echo "‚úÖ No linting issues found!" || exit 1
else
	@if command -v golangci-lint >/dev/null 2>&1; then \
		echo "$(ENV_MSG)"; \
		echo "üîç Running golangci-lint..."; \
		golangci-lint run --timeout=5m && echo "‚úÖ No linting issues found!" || exit 1; \
	else \
		echo "‚ùå Error: Docker container not running and golangci-lint not installed"; \
		echo "Please run: make up"; \
		echo "Or install: go install github.com/golangci/golangci-lint/cmd/golangci-lint@latest"; \
		exit 1; \
	fi
endif

## lint-fix: Run linter and fix issues
lint-fix:
ifdef CONTAINER_RUNNING
	@echo "$(ENV_MSG)"
	@echo "üîß Running golangci-lint with auto-fix..."
	@$(EXEC_CMD) golangci-lint run --fix --timeout=5m && echo "‚úÖ Linting complete! Issues auto-fixed where possible." || exit 1
else
	@if command -v golangci-lint >/dev/null 2>&1; then \
		echo "$(ENV_MSG)"; \
		echo "üîß Running golangci-lint with auto-fix..."; \
		golangci-lint run --fix --timeout=5m && echo "‚úÖ Linting complete! Issues auto-fixed where possible." || exit 1; \
	else \
		echo "‚ùå Error: Docker container not running and golangci-lint not installed"; \
		echo "Please run: make up"; \
		exit 1; \
	fi
endif

## swag: Generate Swagger documentation
swag:
ifdef CONTAINER_RUNNING
	@echo "$(ENV_MSG)"
	@$(EXEC_CMD) swag init -g ./cmd/server/main.go -o ./api/docs
	@echo "‚úÖ Swagger docs generated"
else
	@if command -v swag >/dev/null 2>&1; then \
		echo "$(ENV_MSG)"; \
		swag init -g ./cmd/server/main.go -o ./api/docs; \
		echo "‚úÖ Swagger docs generated"; \
	else \
		echo "‚ùå Error: Docker container not running and swag not installed"; \
		echo "Please run: make up"; \
		echo "Or install: go install github.com/swaggo/swag/cmd/swag@latest"; \
		exit 1; \
	fi
endif

## migrate-create: Create a new migration
migrate-create:
ifndef NAME
	@echo "‚ùå Error: NAME is required"
	@echo "Usage: make migrate-create NAME=add_user_avatar"
	@exit 1
endif
ifdef CONTAINER_RUNNING
	@echo "$(ENV_MSG)"
	@$(EXEC_CMD) go run cmd/migrate/main.go create $(NAME)
else
	@if command -v go >/dev/null 2>&1; then \
		echo "$(ENV_MSG)"; \
		go run cmd/migrate/main.go create $(NAME); \
	else \
		echo "‚ùå Error: Docker container not running and Go not installed"; \
		echo "Please run: make up"; \
		exit 1; \
	fi
endif

## migrate-up: Apply all pending migrations
migrate-up:
ifdef CONTAINER_RUNNING
	@echo "$(ENV_MSG)"
	@$(EXEC_CMD) go run cmd/migrate/main.go up
else
	@if command -v go >/dev/null 2>&1; then \
		echo "$(ENV_MSG)"; \
		go run cmd/migrate/main.go up; \
	else \
		echo "‚ùå Error: Docker container not running and Go not installed"; \
		echo "Please run: make up"; \
		exit 1; \
	fi
endif

## migrate-down: Rollback last migration (or N migrations with STEPS=N)
migrate-down:
ifdef CONTAINER_RUNNING
	@echo "$(ENV_MSG)"
ifdef STEPS
	@$(EXEC_CMD_INTERACTIVE) go run cmd/migrate/main.go down $(STEPS)
else
	@$(EXEC_CMD_INTERACTIVE) go run cmd/migrate/main.go down
endif
else
	@if command -v go >/dev/null 2>&1; then \
		echo "$(ENV_MSG)"; \
ifdef STEPS
		go run cmd/migrate/main.go down $(STEPS); \
else
		go run cmd/migrate/main.go down; \
endif
	else \
		echo "‚ùå Error: Docker container not running and Go not installed"; \
		echo "Please run: make up"; \
		exit 1; \
	fi
endif

## migrate-status: Show current migration version
migrate-status:
ifdef CONTAINER_RUNNING
	@echo "$(ENV_MSG)"
	@$(EXEC_CMD) go run cmd/migrate/main.go version
else
	@if command -v go >/dev/null 2>&1; then \
		echo "$(ENV_MSG)"; \
		go run cmd/migrate/main.go version; \
	else \
		echo "‚ùå Error: Docker container not running and Go not installed"; \
		echo "Please run: make up"; \
		exit 1; \
	fi
endif

## migrate-goto: Go to specific version
migrate-goto:
ifndef VERSION
	@echo "‚ùå Error: VERSION is required"
	@echo "Usage: make migrate-goto VERSION=5"
	@exit 1
endif
ifdef CONTAINER_RUNNING
	@echo "$(ENV_MSG)"
	@$(EXEC_CMD) go run cmd/migrate/main.go goto $(VERSION)
else
	@if command -v go >/dev/null 2>&1; then \
		echo "$(ENV_MSG)"; \
		go run cmd/migrate/main.go goto $(VERSION); \
	else \
		echo "‚ùå Error: Docker container not running and Go not installed"; \
		echo "Please run: make up"; \
		exit 1; \
	fi
endif

## migrate-force: Force set version (recovery)
migrate-force:
ifndef VERSION
	@echo "‚ùå Error: VERSION is required"
	@echo "Usage: make migrate-force VERSION=1"
	@exit 1
endif
ifdef CONTAINER_RUNNING
	@echo "$(ENV_MSG)"
	@$(EXEC_CMD_INTERACTIVE) go run cmd/migrate/main.go force $(VERSION)
else
	@if command -v go >/dev/null 2>&1; then \
		echo "$(ENV_MSG)"; \
		go run cmd/migrate/main.go force $(VERSION); \
	else \
		echo "‚ùå Error: Docker container not running and Go not installed"; \
		echo "Please run: make up"; \
		exit 1; \
	fi
endif

## migrate-drop: Drop all tables
migrate-drop:
ifdef CONTAINER_RUNNING
	@echo "$(ENV_MSG)"
	@$(EXEC_CMD_INTERACTIVE) go run cmd/migrate/main.go drop --force
else
	@if command -v go >/dev/null 2>&1; then \
		echo "$(ENV_MSG)"; \
		go run cmd/migrate/main.go drop --force; \
	else \
		echo "‚ùå Error: Docker container not running and Go not installed"; \
		echo "Please run: make up"; \
		exit 1; \
	fi
endif

## build-binary: Build Go binary directly on host (requires Go)
build-binary:
	@if ! command -v go >/dev/null 2>&1; then \
		echo "‚ùå Error: Go is not installed on your machine"; \
		echo ""; \
		echo "Please install Go first:"; \
		echo "  https://golang.org/doc/install"; \
		echo ""; \
		echo "Or use Docker instead:"; \
		echo "  make up"; \
		exit 1; \
	fi
	@echo "üî® Building Go binary..."
	@mkdir -p bin
	@go build -o bin/server ./cmd/server
	@echo "‚úÖ Binary built successfully: bin/server"
	@echo ""
	@echo "To run the binary:"
	@echo "  make run-binary"
	@echo "  OR"
	@echo "  ./bin/server"

## run-binary: Build and run Go binary directly on host (requires Go)
run-binary: build-binary
	@echo ""
	@echo "üöÄ Starting server..."
	@echo ""
	@echo "‚ö†Ô∏è  Note: Ensure PostgreSQL is running on localhost:5432"
	@echo "‚ö†Ô∏è  Note: Set environment variables or use .env file"
	@echo ""
	@./bin/server

## clean: Clean build artifacts
clean:
	@echo "üßπ Cleaning build artifacts..."
	@rm -f coverage.out coverage.html
	@rm -f bin/*
	@docker compose down -v 2>/dev/null || true
	@echo "‚úÖ Clean complete"
