								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set('token', jsonData.data.access_token);",
									"    pm.collectionVariables.set('refresh_token', jsonData.data.refresh_token);",
									"    pm.collectionVariables.set('id', jsonData.data.user.id);",
									"    pm.collectionVariables.set('email', jsonData.data.user.email);",
									"    pm.collectionVariables.set('name', jsonData.data.user.name);",
